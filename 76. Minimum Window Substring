#include<bits/stdc++.h>
class Solution {
public:
    bool check(map<char,int>&t_count,map<char,int>&mp){
        for(auto it=t_count.begin();it!=t_count.end();it++){
            if(it->second>mp[it->first]) {
                return false;}
        }
        return true;
    }
    string minWindow(string s, string t) {
        if(t.size()>s.size()) return "";
        vector<pair<int,pair<int,int>>>p;
        map<char,int>t_count;
        for(int i=0;i<t.size();i++){
            t_count[t[i]]++;
        }
        map<char,int>mp;
        int i=0,j=0;
        int mn=1e9,ii=-1,jj=-1;
        while(i<s.size()&&j<s.size()){
            mp[s[j]]++;
            while(check(t_count,mp)) {
                if(j-i+1<mn){
                    mn=j-i+1;
                    ii=i;
                    jj=j;
                }
                mp[s[i]]--;
                if(mp[s[i]]==0) mp.erase(s[i]);
                i++;
            }
            j++;
        }
        if(ii==-1&&jj==-1) return "";
        string ans="";
        for(int i=ii;i<=jj;i++) ans+=s[i];
        return ans;
    }
};
