#include <bits/stdc++.h> 
/************************************************************

Following is the Binary Tree node class
    
template <typename T = int>
class TreeNode
{
public:
    T data;
    TreeNode<T> *left;
    TreeNode<T> *right;

    TreeNode(T val)
    {
        this->data = val;
        left = NULL;
        right = NULL;
    }

    ~TreeNode()
    {
        if (left != NULL)
        {
            delete left;
        }
        if (right != NULL)
        {
            delete right;
        }
    }
};

************************************************************/
int leftHeight(TreeNode<int>* node){
    int t=0;
    while(node){
        t++;
        node=node->left;
    }
    return t;
}int rightHeight(TreeNode<int>* node){
    int t=0;
    while(node){
        t++;
        node=node->right;
    }
    return t;
}
int countNodes(TreeNode<int> *root)
{
    //    Write your code here.

    if(root==NULL) return 0;
    int left=leftHeight(root);
    int right=rightHeight(root);
    if(left==right) return (1<<left)-1;
    return 1+countNodes(root->left)+ countNodes(root->right);

}


