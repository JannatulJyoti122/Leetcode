int findpath(TreeNode<int>*root, int x, vector<int>&ans){
	if(root==NULL) return 0;
	ans.push_back(root->data);
	if(root->data==x) return 1;
	int ll=findpath(root->left,x,ans);
	int rr=findpath(root->right,x,ans);
	if(ll==true||rr==true) return true;
	ans.pop_back();
	return false;
}
vector<int> pathInATree(TreeNode<int> *root, int x)
{
    // Write your code here.
	vector<int>ans;
	findpath(root,x,ans);
	return ans;


}
