class Solution {
public:
    int subarraysDivByK(vector<int>& nums, int k) {
        int sum=0;
        int ans=0;
        unordered_map<int,int>mp;
        for(int i=0;i<nums.size();i++){
            sum=((sum+nums[i])%k+k)%k;
            if(sum==0) ans++;
            ans+=mp[sum];
            mp[sum]+=1;
        }
        return ans;
    }
};
