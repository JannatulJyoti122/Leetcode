#include<bits/stdc++.h>
/************************************************************

    Following is the TreeNode class structure:

    template <typename T>
    class TreeNode
    {
    public:
        T data;
        TreeNode<T> *left;
        TreeNode<T> *right;

        TreeNode(T dat)
        {
            this->data = dat;
            left = NULL;
            right = NULL;
        }
    };

************************************************************/

vector<int> getTopView(TreeNode<int> *root)
{
    // Write your code here.
    queue<pair<TreeNode<int>*,int>>q;
    map<int,int>mp;
    vector<int>ans;
    if(root==NULL) return ans;
    q.push({root,0});
    while(!q.empty()){
        auto p=q.front();
        q.pop();
        int vertex=p.second;
        if(mp.find(vertex)==mp.end()) mp[vertex]=p.first->data;
        if(p.first->left) q.push({p.first->left,vertex-1});
        if(p.first->right) q.push({p.first->right,vertex+1});
    }
    for(auto p:mp) ans.push_back(p.second);
    return ans;

}
